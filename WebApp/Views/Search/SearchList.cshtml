@model WebLogic.ViewModels.SearchViewModel

@{
    int item = 0;
    bool newRow = true;
}
<div @*class="table-responsive"*@ style="align-content:center;">
    @{
        foreach (var product in Model.Products)
        {
            if (newRow)
            {
                @: <div class="row">
                newRow = false;
            }
            <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
                <div class="row">
                    <div class="col">
                        <a href='@Url.Action("Details", "Product", new { id = product.ID })'>
                            <img src="@Url.Action("Get", "ImageStore", new { id = product.ImageStoreID })" alt="@product.Description" class="img-thumbnail" width="120" />
                        </a>
                    </div>
                    <div class="col item-name">
                        <a href='@Url.Action("Details", "Product", new { id = product.ID })'>
                            @product.Name <b>@product.OfferPrice.ToString("C")</b>
                        </a>
                    </div>
                </div>
            </div>
            item++;
            if (item % Model.NumberOfItemsPerRow == 0)
            {
                @: </div>
                newRow = true;
            }
        }
    }
</div>



